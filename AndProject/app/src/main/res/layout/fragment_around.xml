<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".around.AroundFragment"
    android:background="@color/black"
    android:orientation="vertical">



    <com.google.android.material.chip.ChipGroup
        android:layout_marginLeft="20dp"
        android:id="@+id/chip_grp"
        app:singleSelection="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.chip.Chip
            android:id="@+id/around_chip_1"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="차트"
            android:textColor="@color/main_color"
            app:chipIconTint="@drawable/chip_around_color"
            app:chipBackgroundColor="@drawable/chip_around_color"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/around_chip_2"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장르.테마"
            android:textColor="@color/main_color"
            app:chipIconTint="@drawable/chip_around_color"
            app:chipBackgroundColor="@drawable/chip_around_color"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/around_chip_3"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오디오"
            android:textColor="@color/main_color"
            app:chipIconTint="@drawable/chip_around_color"
            app:chipBackgroundColor="@drawable/chip_around_color"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/around_chip_4"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영상"
            android:textColor="@color/main_color"
            app:chipIconTint="@drawable/chip_around_color"
            app:chipBackgroundColor="@drawable/chip_around_color"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/around_chip_5"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="크리에이터"
            android:textColor="@color/main_color"
            app:chipIconTint="@drawable/chip_around_color"
            app:chipBackgroundColor="@drawable/chip_around_color"
            />


    </com.google.android.material.chip.ChipGroup>

    <ScrollView
        android:id="@+id/chart_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10dp"
                >
                <TextView
                    android:id="@+id/tv_chart_category1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="20dp"
                    android:text="차트"
                    />

                <ImageView
                    android:layout_toRightOf="@id/tv_chart_category1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/forward"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_radius"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_category_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FLO 차트"
                        android:textColor="@color/main_color"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_category_title1"
                        android:textColor="#6F7072"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="22시 기준"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_marginTop="3dp"
                        android:id="@+id/imgv_lsWhool"
                        android:src="@drawable/full_foward"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        />
                    <TextView
                        android:id="@+id/tv_lsWhool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체듣기"
                        android:textColor="#ffffff"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:layout_marginRight="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_category_info1"
                        android:layout_below="@id/tv_category_title1"
                        android:textSize="10dp"
                        android:textColor="#6F7072"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최근 24시간 집계, FLO 최고 인기곡 차트!"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:background="@drawable/recv_radius"
                        android:id="@+id/recv_flo_chart1"
                        >

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>









            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_radius"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_category_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="해외 소셜 차트"
                        android:textColor="@color/main_color"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_category_title1"
                        android:textColor="#6F7072"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="06/27 ~ 07/03"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_marginTop="3dp"
                        android:id="@+id/imgv_lsWhool1"
                        android:src="@drawable/full_foward"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        />
                    <TextView
                        android:id="@+id/tv_lsWhool1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체듣기"
                        android:textColor="#ffffff"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:layout_marginRight="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_category_info2"
                        android:layout_below="@id/tv_category_title2"
                        android:textSize="10dp"
                        android:textColor="#6F7072"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유튜브, 틱톡 등 글로벌 트렌드를 한 눈에!"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:background="@drawable/recv_radius"
                        android:id="@+id/recv_foregin_chart"
                        >

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_radius"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_category_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V컬러링 차트"
                        android:textColor="@color/main_color"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tv_category_title1"
                        android:textColor="#6F7072"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="07/07"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:layout_marginTop="3dp"
                        android:id="@+id/imgv_lsWhool3"
                        android:src="@drawable/full_foward"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        />
                    <TextView
                        android:id="@+id/tv_lsWhool3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체듣기"
                        android:textColor="#ffffff"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:layout_marginRight="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_category_info3"
                        android:layout_below="@id/tv_category_title1"
                        android:textSize="10dp"
                        android:textColor="#6F7072"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나를 표현하는 '보이는 컬러링' 요즘엔 어떤 거"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:paddingBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="370dp"
                        android:background="@drawable/recv_radius"
                        android:id="@+id/recv_v_chart"
                        >

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>






            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_chart_category2"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_chart_category2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="장르"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recv_genre"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_chart_category3"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_chart_category3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="오디오"
                    />

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:text="오디오 카테고리"
                        />

                    <TextView
                        android:id="@+id/tv_around_whole"
                        android:layout_toLeftOf="@id/imgv_around_whole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:text="전체보기"
                        />

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/imgv_around_whole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forward_gray"
                        />


                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recv_around_audio"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_chart_category4"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10dp"
                >
                <TextView
                    android:id="@+id/tv_chart_category4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="20dp"
                    android:text="영상"
                    />

                <ImageView
                    android:layout_toRightOf="@id/tv_chart_category4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/forward"
                    />
            </RelativeLayout>

                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                <ImageView
                    android:id="@+id/around_movie_img1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/around_movie_img1"
                    />


                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img2"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img3"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img4"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img5"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img6"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img7"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:src="@drawable/around_movie_img8"
                        />

                </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


        <LinearLayout
            android:id="@+id/ln_chart_category5"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="10dp"
                >
                <TextView
                    android:id="@+id/tv_chart_category5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="20dp"
                    android:text="크리에이터 테마리스트 Pick"
                    />

                <ImageView
                    android:layout_toRightOf="@id/tv_chart_category5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/forward"
                    />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="330dp"
                        android:layout_height="200dp"
                        android:src="@drawable/around_creater_img1"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="330dp"
                        android:layout_height="200dp"
                        android:src="@drawable/around_creater_img2"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="330dp"
                        android:layout_height="200dp"
                        android:src="@drawable/around_creater_img3"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="330dp"
                        android:layout_height="200dp"
                        android:src="@drawable/around_creater_img4"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="330dp"
                        android:layout_height="200dp"
                        android:src="@drawable/around_creater_img5"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="330dp"
                        android:layout_height="200dp"
                        android:src="@drawable/around_creater_img6"
                        />


                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>