<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.UtilizeHomeFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.chip.ChipGroup
            android:layout_marginHorizontal="20dp"
            android:id="@+id/chip_grp_utilize"
            app:singleSelection="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectionRequired="true"

            >

            <com.google.android.material.chip.Chip
                android:id="@+id/utilize_chip_1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="이용권"
                android:textColor="@color/main_color"
                app:chipIconTint="@drawable/chip_around_color"
                app:chipBackgroundColor="@drawable/chip_around_color"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/utilize_chip_2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T 혜택"
                android:textColor="@color/main_color"
                app:chipIconTint="@drawable/chip_around_color"
                app:chipBackgroundColor="@drawable/chip_around_color"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/utilize_chip_3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY"
                android:textColor="@color/main_color"
                app:chipIconTint="@drawable/chip_around_color"
                app:chipBackgroundColor="@drawable/chip_around_color"
                />


        </com.google.android.material.chip.ChipGroup>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager_utilize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
    </FrameLayout>


</LinearLayout>