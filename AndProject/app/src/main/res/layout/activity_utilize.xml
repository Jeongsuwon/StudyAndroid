<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.UtilizeActivity"
    android:orientation="vertical"
    android:background="#0F0D0E"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        >

        <ImageView
            android:id="@+id/imgv_back_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이용권 구매"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_circle_outline_24"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>


    <!--chip group-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.google.android.material.chip.ChipGroup
            android:layout_marginHorizontal="20dp"
            android:id="@+id/chip_grp_utilize"
            app:singleSelection="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <com.google.android.material.chip.Chip
                android:id="@+id/utilize_chip_1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="이용권"
                android:textColor="@color/main_color"
                app:chipIconTint="@drawable/chip_around_color"
                app:chipBackgroundColor="@drawable/chip_around_color"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/utilize_chip_2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T 혜택"
                android:textColor="@color/main_color"
                app:chipIconTint="@drawable/chip_around_color"
                app:chipBackgroundColor="@drawable/chip_around_color"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/utilize_chip_3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY"
                android:textColor="@color/main_color"
                app:chipIconTint="@drawable/chip_around_color"
                app:chipBackgroundColor="@drawable/chip_around_color"
                />


        </com.google.android.material.chip.ChipGroup>


    </LinearLayout>

    <!--/chip group    -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2E282B"
        />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

<!--    <androidx.viewpager2.widget.ViewPager2-->
<!--        android:id="@+id/pager_utilize"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        />-->

</LinearLayout>


