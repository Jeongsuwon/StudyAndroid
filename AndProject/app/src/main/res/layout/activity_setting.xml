<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.SettingActivity"
    android:orientation="vertical"
    android:background="#0F0D0E"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imgv_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_logo"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/set_setting"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"


                />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캐릭터1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="25dp"
                />
            <TextView
                android:layout_below="@+id/tv_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취향을 선택해주세요."
                android:textColor="#ffffff"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/set_favor"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />
        
        <RelativeLayout
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_myid_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 계정 관리"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_marginTop="7dp"
                android:id="@+id/imgv_set_tlogo"
                android:layout_below="@id/tv_myid_manage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/set_t_logo"
                />
            <TextView
                android:layout_below="@id/tv_myid_manage"
                android:layout_toRightOf="@id/imgv_set_tlogo"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T아이디 계정 회원"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_flo_id"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/imgv_set_tlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flog***123"
                android:textColor="#ffffff"
                android:textSize="12dp"
                />
            <TextView
                android:layout_marginTop="7dp"
                android:layout_below="@+id/tv_flo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무제한 듣기 T멤버십"
                android:textColor="#ffffff"
                android:textSize="12dp"


                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_notice"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_service"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_news"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_music"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_movie"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_marginTop="7dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_save"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_app"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/set_voice"
                android:layout_weight="1"
                />


        </LinearLayout>

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/set_info"
            android:layout_gravity="center"
            android:paddingBottom="50dp"
            />
    </LinearLayout>
    </ScrollView>

</LinearLayout>